# Alacritty Configuration
# テンプレート化されたAlacritty設定ファイル

# Catppuccin Mocha テーマをインポート
[general]
import = ["~/.config/alacritty/catppuccin-mocha.toml"]
live_config_reload = true

[env]
TERM = "xterm-256color"

[window]
padding = { x = 10, y = 10 }
decorations = "none"  # 装飾なし（以前の設定を復元）
title = "Terminal"
dynamic_title = true
opacity = 0.85  # 透明度（以前の設定を復元）
startup_mode = "Windowed"

[font]
size = 12.0

[font.normal]
family = "Hack Nerd Font"
style = "Regular"

[font.bold]
family = "Hack Nerd Font"
style = "Bold"

[font.italic]
family = "Hack Nerd Font"
style = "Italic"

[colors]
# 基本的なカラーテーマ
[colors.primary]
background = "#1e1e2e"
foreground = "#cdd6f4"

[colors.normal]
black = "#45475a"
red = "#f38ba8"
green = "#a6e3a1"
yellow = "#f9e2af"
blue = "#89b4fa"
magenta = "#f5c2e7"
cyan = "#94e2d5"
white = "#bac2de"

[colors.bright]
black = "#585b70"
red = "#f38ba8"
green = "#a6e3a1"
yellow = "#f9e2af"
blue = "#89b4fa"
magenta = "#f5c2e7"
cyan = "#94e2d5"
white = "#a6adc8"

[terminal.shell]
{{- if eq .chezmoi.os "darwin" }}
program = "/bin/zsh"
{{- else if eq .chezmoi.os "linux" }}
program = "/bin/bash"
{{- else }}
program = "/bin/sh"
{{- end }}
args = ["--login"]

# カスタムカーソル色（以前の設定を復元）
[colors.cursor]
text = '#CCD0DA'
cursor = '#E64553'
